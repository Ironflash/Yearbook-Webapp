<%= form_for(@meeting) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%if @meeting.date.blank? %>
      <%= f.text_field :date, class: "datepicker", value: DateTime.now.strftime('%m/%d/%Y') %>
    <%else%>
      <%= f.text_field :date, class: "datepicker" %>
    <%end%>

    <%= f.label :time %>
    <%= f.text_field :time, class: "timepicker" %>

    <%= f.label :duration %>
    <%= f.text_field :duration %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :attendees %>
    <%= f.text_field :attendees %>

    <%= f.label :note %>
    <%= f.text_area :note, size: "30x10" %>

  </div>
  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>
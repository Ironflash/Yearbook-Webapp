<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) && !user.admin? || current_user.position=="Editor and Chief" %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" }, class: "delete"%>
    |  <%= link_to "settings", edit_user_path(user), class: "settings" %> 
  <% end %>
  <%if user.admin?%>
	  <h2 class="position"><%= user.position %> / Admin</h2>
  <%else%>
  	  <h2 class="position"><%= user.position %></h2>
  <%end%>
</li>
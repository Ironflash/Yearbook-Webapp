<%= provide(:title, @user.name) %>
<div class = "row-fluid">

	<aside class="span4">
    <section>
     	<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
		<h1><%= @user.email %></h1>
		<h1><%= @user.phone unless @user.phone.nil? || @user.phone.empty? %></h1>
		<%if @user.admin?%>
      <h1 class="position"><%= @user.position %> / Admin</h1>
    <%else%>
      <h1 class="position"><%= @user.position %></h1>
    <%end%>
    <%if current_user.admin? && !current_user?(@user) && !@user.admin? || current_user.position=="Editor and Chief" %> 
      <%= link_to "Give Admin", toggle_admin_user_path(@user),class: "btn" %>
      <%= link_to "Remove Admin", toggle_admin_user_path(@user),class: "btn" %>
    <%end%>
    </section>
  	</aside>
	<div class="span8">
    <% if @user.stories.any? %>
      <h3>Stories covering and covered (<%= @user.stories.count %>)</h3>
      <ol class="stories">
        <%= render @stories %>
      </ol>
      <%= will_paginate @stories %>
    <% end %>
  </div>
</div>


<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :position %>
      <%= f.select(:position,["Editor and Chief","Assistant Editor","Chief Photographer","Section Editor","Staff Writer","Staff Photographer"]) %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>